<h1>Sign up for Foodmoood!</h1><br>
<h2></h2>

<% if logged_in?%>
    <h4>Please log out first!</h4>
<% else %>
<form method="post" action="/signup">
    Username: <input type="text" name="user[username]" required><br>
    Password: <input type="password" name="user[password]" required><br>
    <input type="submit" value="sign up">
</form>
<% end %>
