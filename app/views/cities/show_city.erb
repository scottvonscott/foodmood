<h1><%=@city.name%></h1><br>

<p><a href="/cities/<%=@city.id%>/edit">Edit City </a></p>

<h2> Restaurants </h2>

<% @city.restaurants.each do |restaurant| %>
  <a href =/restaurants/<%=restaurant.id%>><%= restaurant.name %></a>
  <% end %>




<form method="post" action="/cities/<%=@city.id%>/delete">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete Restaurant">
</form>

<p><a href="/cities">Back to All Restaurants</a></p><br>

